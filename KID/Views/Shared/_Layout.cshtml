<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style-search.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet">
    <script type="text/javascript">
        $(function () {
            $(window).scroll(function () {
                if ($(this).scrollTop() != 0) {
                    $('#toTop').fadeIn();
                } else {
                    $('#toTop').fadeOut();
                }
            });
            $('#toTop').click(function () {
                $('body,html').animate({ scrollTop: 0 }, 800);
            });
        });
    </script>   

</head>
<body>
    <div id="upline">
                @{
                    HttpCookie cookieReq = Request.Cookies["KIDTest"];
                    string id = "", name = "", role = "";
                    if (cookieReq != null)
                    {
                        id = cookieReq["UserID"];
                        name = cookieReq["login"];
                        role = cookieReq["role"];
                    }
                    if (role == "user" || role == "admin" || role == "main_admin")
                    {
                        <div class="point">@Html.ActionLink((string)name, "LK", "User")</div>
                    }
                    else
                    {
                        <div class="point"> @Html.ActionLink("Войти", "LogginPage", "User") | @Html.ActionLink("Регистрация", "RegisterPage", "User")</div>
                    }


                    }

                <div class="point"><a href="#">Помощь</a></div>
                <div class="point">@Html.ActionLink("Корзина", "Basket", "Basket")</div>
       <hr /> 
     </div>

   

    <div id="header">
        <div id="logo"><span><img src="~/Content/images/index/logo.png" height="150" alt="poster" /></span></div>
        <div id="text">KID</div>
        <div class="hsearch">
            <div class="box">
                <div class="container">
        @using (Html.BeginForm("Search", "Categories", FormMethod.Post))
                {
